<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" 
    xmlns="http://javafx.com/javafx/9.0.1" 
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.ihm.controller.HistoryController">
    <children>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="30.0" prefWidth="645.0" style="-fx-background-color: #8ADAFF;">
            <children>
                <Label fx:id="askValidadLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="ValidationForm" text="Historique des déclarations" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="17.0" />
                    </font>
                </Label>
            </children>
        </FlowPane>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="56.0" prefWidth="600.0">
            <children>
                <Button fx:id="loupeButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" />
                <TextField fx:id="loupeFiel" alignment="TOP_LEFT" promptText="Recherche...">
                    <FlowPane.margin>
                        <Insets left="10.0" />
                    </FlowPane.margin>
                </TextField>
                <ComboBox fx:id="filter" prefWidth="150.0" promptText="Filtrer par...">
                    <FlowPane.margin>
                        <Insets left="60.0" />
                    </FlowPane.margin>
                </ComboBox>
            </children>
        </FlowPane>
        <TableView id="arrayRecap" fx:id="table" prefHeight="221.0" prefWidth="580.0" styleClass="ValidationForm" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titreCol" prefWidth="115.0" text="Titre" />
                <TableColumn fx:id="typeCol" prefWidth="110.0" text="Type d'incident" />
                <TableColumn fx:id="importanceCol" minWidth="9.0" prefWidth="65.0" text="Gravité" />
                <TableColumn fx:id="dateCol" prefWidth="58.0" text="Date" />
                <TableColumn fx:id="localisationCol" prefWidth="83.0" text="Lieu" />
                <TableColumn fx:id="nomCol" prefWidth="76.0" text="Nom" />
                <TableColumn fx:id="prenomCol" prefWidth="72.0" text="Prénom" />
                <TableColumn fx:id="posteCol" prefWidth="84.0" text="Profession" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TableView>
        <FlowPane alignment="CENTER" prefHeight="71.0" prefWidth="600.0" VBox.vgrow="NEVER">
            <children>
                <VBox alignment="CENTER" prefHeight="58.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="retour" graphicTextGap="0.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" textFill="TRANSPARENT" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Button>
                        <Label fx:id="returnLabel" styleClass="ValidationForm" text="accueil" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </FlowPane>
    </children>
</VBox>
